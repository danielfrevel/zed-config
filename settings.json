{
  "context_servers": {
    "chrome-devtools-mcp-zed": {
      "enabled": true,
      "settings": {}
    },
    "mcp-server-context7": {
      "enabled": true,
      "settings": {
        "context7_api_key": "ctx7sk-2d73428c-6556-4cbe-898c-dad69df4c579"
      }
    }
  },
  "features": {
    "edit_prediction_provider": "copilot",
