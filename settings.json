    "enabled": false,
    "button": false,
  },
  "relative_line_numbers": "enabled",
  "scrollbar": {
    "show": "never",
  },
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false,
  },
  "tabs": {
    "file_icons": true,
    "git_status": true,
